<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/upper_temperature"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center" />

    <com.appyvet.materialrangebar.RangeBar
        android:id="@+id/temperature_seek"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:rotation="270"
        android:layout_gravity="center"
        android:layout_marginStart="-115dp"
        android:layout_marginEnd="40dp"
        app:mrb_barWeight="2dp"
        app:mrb_connectingLineWeight="4dp"
        app:mrb_leftThumbColor="@color/colorAccent"
        app:mrb_connectingLineColor="@color/colorAccent"
        app:mrb_minThumbDistance="-1"
        app:mrb_rangeBar="true"
        app:mrb_rangeBarPaddingBottom="30dp"
        app:mrb_rangeBar_rounded="true"
        app:mrb_rightThumbColor="@color/colorAccent"
        app:mrb_thumbBoundarySize="0dp"
        app:mrb_thumbSize="8dp"
        app:mrb_tickDefaultLabel="label"
        app:mrb_tickEnd="@integer/temperature_max_tick"
        app:mrb_tickHeight="0dp"
        app:mrb_tickInterval="0.1"
        app:mrb_tickLabelSize="0sp"
        app:mrb_temporaryPins="false"
        app:mrb_pinColor="@android:color/transparent"
        app:mrb_pinTextColor="@android:color/transparent"
        app:mrb_tickStart="@integer/temperature_min_tick" />

<!--    <SeekBar-->
<!--        android:id="@+id/temperature_seek"-->
<!--        android:layout_width="360dp"-->
<!--        android:layout_height="360dp"-->
<!--        android:layout_marginStart="-155dp"-->
<!--        android:rotation="270" />-->

    <TextView
        android:id="@+id/lower_temperature"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center" />

</LinearLayout>